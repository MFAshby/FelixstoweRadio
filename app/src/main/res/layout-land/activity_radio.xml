<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".RadioActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/play_button"
        android:onClick="onPlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_play_arrow_black_48dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:ignore="RelativeOverlap"/>

    <ImageView
        android:layout_width="@dimen/banner_width"
        android:layout_height="@dimen/banner_height"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:src="@drawable/main_logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/logo_description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/now"
        android:id="@+id/now"
        android:textStyle="bold"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignLeft="@id/now_playing"
        android:layout_alignRight="@id/now_playing"
        android:layout_alignStart="@id/now_playing"
        android:layout_alignEnd="@id/now_playing"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/loading"
        android:id="@+id/now_playing"
        android:layout_below="@+id/now"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/next"
        android:id="@+id/next"
        android:textStyle="bold"
        android:layout_below="@+id/logo"
        android:layout_toRightOf="@id/now"
        android:layout_toEndOf="@id/now"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/loading"
        android:id="@+id/next_playing"
        android:layout_below="@+id/next"
        android:layout_alignLeft="@+id/next"
        android:layout_alignStart="@+id/next"/>
</RelativeLayout>
