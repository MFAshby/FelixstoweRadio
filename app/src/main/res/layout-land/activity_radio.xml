<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".RadioActivity">

    <ImageButton
        android:layout_width="@dimen/play_button_width"
        android:layout_height="@dimen/play_button_height"
        android:src="@drawable/ic_play_arrow_black_48dp"
        android:id="@+id/play_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onPlayButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/play"/>

    <ImageView
        android:layout_width="@dimen/banner_width"
        android:layout_height="@dimen/banner_height"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:src="@drawable/banner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/loading"
        android:id="@+id/now_playing"
        android:layout_below="@+id/now"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/play_button"
        android:layout_toLeftOf="@id/play_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/next"
        android:id="@+id/next"
        android:textStyle="bold"
        android:layout_below="@+id/now_playing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/loading"
        android:id="@+id/next_playing"
        android:layout_below="@+id/next"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/play_button"
        android:layout_toLeftOf="@id/play_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/now"
        android:id="@+id/now"
        android:textStyle="bold"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
